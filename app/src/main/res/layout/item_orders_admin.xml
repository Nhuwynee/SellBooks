<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="15dp"
    android:background="@drawable/border_top_invoice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Avatar Image -->
        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background_ava_admin"
            android:src="@drawable/ava_admin_1"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Order Number -->
            <TextView
                android:id="@+id/orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2411002"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/arima_bold" />

            <!-- Order Date -->
            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/10/2024"
                android:textSize="15sp"
                android:fontFamily="@font/arima_bold"
                android:textColor="#555"
                android:layout_marginTop="4dp" />

            <!-- Order Price -->
            <TextView
                android:id="@+id/orderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="425.000đ"
                android:fontFamily="@font/arima_bold"
                android:textSize="15sp"
                android:textColor="#E81970"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Icon and Status Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Icon -->
            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/xemay"
                android:layout_gravity="center" />

            <!-- Order Status -->
            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang giao"
                android:fontFamily="@font/arima_bold"
                android:textSize="20sp"
                android:textColor="#E81970"
                android:layout_marginTop="4dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
