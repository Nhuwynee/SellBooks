<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border_shape"
        >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/arima_semibold"
            android:text="ĐẶT HÀNG"
            android:textColor="#E81970"
            android:layout_marginTop="5dp"
            android:textSize="36dp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_bag_pink">
        </ImageView>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/br_order"
        android:padding="16dp">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/invoice_title"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="163dp"
            android:layout_marginBottom="464dp"
            android:background="#D9D9D9"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/quantity_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="115dp"
            android:fontFamily="@font/arima_semibold"
            android:text="1"
            android:textColor="#A8919A"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/customer_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ava_account" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/customer_image"
            android:fontFamily="@font/arima_semibold"
            android:text="Lưu Ngọc Yến Như"
            android:textColor="#E81970"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name"
            android:layout_toEndOf="@id/customer_image"
            android:fontFamily="@font/arima_semibold"
            android:text="0123456789"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/customer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_phone"
            android:layout_toEndOf="@id/customer_image"
            android:fontFamily="@font/arima_semibold"
            android:text="32 Cao Thắng,  Đà Nẵng"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:textColor="#2A15AB"
            android:text="Đặt hàng thành công !"
            android:fontFamily="@font/arima_bold"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/tick"/>
        <Button
            android:id="@+id/buy_button"
            android:layout_width="103dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="125dp"
            android:background="@drawable/border_pink"
            android:fontFamily="@font/arima_bold"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="MUA"
            android:textColor="#78103C"
            android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>