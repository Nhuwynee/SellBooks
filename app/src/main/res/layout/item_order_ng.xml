<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8FB"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
    android:id="@+id/product_1"
    android:layout_width="0dp"
    android:layout_weight="1.5"
    android:layout_height="wrap_content"
    android:fontFamily="@font/arima_semibold"
    android:text="Nhật ký tình yêu"
    android:textColor="#E81970"
    android:textSize="18sp"
      />

<TextView
android:id="@+id/price_1"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
android:fontFamily="@font/arima_semibold"
android:text="175.000đ"
android:textColor="#A8919A"
android:textSize="15sp" />
<TextView
android:id="@+id/quantity_1"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
android:fontFamily="@font/arima_semibold"
android:text="1"
    android:gravity="center"
android:textColor="#A8919A"
android:textSize="16sp" />

<TextView
android:id="@+id/total_1"
    android:layout_width="0dp"
    android:layout_weight="1"
android:layout_height="wrap_content"
android:fontFamily="@font/arima_semibold"
android:text="175.000đ"
android:textColor="#A8919A"
android:textSize="15sp" />
</LinearLayout>
</LinearLayout>