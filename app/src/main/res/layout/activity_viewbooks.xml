<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            tools:context=".MainActivity">

            <ViewFlipper
                android:id="@+id/viewflipper"
                android:layout_width="218dp"
                android:layout_height="242dp"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="20dp"></ViewFlipper>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="-15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!-- Author Image -->
                <ImageView
                    android:id="@+id/author_Image"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="Author Image"
                    android:src="@drawable/author_hongluc" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Hồng lục"
                        android:fontFamily="@font/arima_semibold"
                        android:textColor="#E81970"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="157dp"
                        android:layout_height="37dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="-7dp"
                        android:text="By Kim Diệp Tử"
                        android:fontFamily="@font/arima_bold"
                        android:textColor="#78103C"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:paddingTop="15dp"
                    android:text="225.000đ"
                    android:fontFamily="@font/arima_semibold"
                    android:textColor="#2A15AB"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arima_bold"
                    android:textColor="#78103C"
                    app:tabIndicatorColor="#FFC107"
                    app:tabSelectedTextColor="#78103C"
                    >

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arima_bold"
                        android:textColor="#78103C"
                        android:text="About"
                        />
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review"
                        android:fontFamily="@font/arima_bold"
                        android:textColor="#78103C"
                        />
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author"
                        android:fontFamily="@font/arima_bold"
                        android:textColor="#78103C"
                        />

                </com.google.android.material.tabs.TabLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                >
                <TextView
                    android:id="@+id/book_rating"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:gravity="left"
                    android:text="★★★★★"
                    android:textColor="#F4D31C"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/book_sl"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arima_bold"
                    android:gravity="left"
                    android:layout_marginTop="-10dp"
                    android:text="| 2,500 books"
                    android:textColor="#AC97A0"
                    android:textSize="18sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="5dp">
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/circle_nhuw"
                    android:src="@drawable/ic_bag" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addCartText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="50dp"
                        android:fontFamily="@font/arima_bold"
                        android:text="Add to Cart"
                        android:textColor="#78103C"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="100dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btngiamsoluong"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/btn_tanggiam"
                            android:fontFamily="@font/arima_bold"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#78103C"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/book_soluong"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/arima_bold"
                            android:text="1"
                            android:textColor="#78103C"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btntangsoluong"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/btn_tanggiam"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="+"
                            android:textColor="#78103C"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

 <!-- chưa fixx dc -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#E81970"
            app:itemBackground="@drawable/nav_item_background"
            app:itemIconTint="@color/nav_item_color"
            app:itemTextAppearanceActive="@style/TextAppearance.BottomNavigationView.BoldText"
            app:itemTextAppearanceInactive="@style/TextAppearance.BottomNavigationView.BoldText"
            app:itemTextColor="@color/nav_item_color"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_trangchu" />
    </LinearLayout>
</LinearLayout>