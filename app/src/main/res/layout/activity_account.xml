<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCOUNT"
        android:textSize="24sp"
        android:textColor="#FF4081"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>

    <!-- User Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user_icon" /> <!-- Change to your user image -->

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thị Hiếu"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textSize="14sp"
            android:textColor="#FF4081"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/button_add_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm sách mới"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_book_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách sách"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_textfield"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách đơn hàng"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_account_background"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_account_background"/>
</LinearLayout>
