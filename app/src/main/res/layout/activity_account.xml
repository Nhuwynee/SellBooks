<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF">

    <!-- Tiêu đề ACCOUNT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:textSize="27sp"
            android:textColor="#FF4081"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="47dp"
            android:layout_height="57dp"
            android:layout_marginStart="9dp"
            android:src="@drawable/img_cart_admin" />
    </LinearLayout>

    <!-- Đường thẳng nằm ngang -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF4081"
        android:layout_marginTop="10dp"/> <!-- Khoảng cách giữa hình ảnh và đường kẻ -->

    <!-- User Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp">

        <!-- Thông tin người dùng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Hình ảnh bên trái -->
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/catgirl"
                android:layout_marginEnd="16dp"/>

            <!-- TextView bên phải -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Thị Hiếu"
                    android:textSize="25sp"
                    android:textColor="#78103C"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FF1678"
                    android:paddingTop="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Đường kẻ nét đứt dưới chữ Admin -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/dashed_line" />
    </LinearLayout>


    <Button
        android:id="@+id/button_add_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm sách mới"
        android:textColor="#2A15AB"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_account_background"
        android:layout_marginBottom="26dp"/>

    <Button
        android:id="@+id/button_book_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách sách"
        android:textColor="#2A15AB"
        android:background="@drawable/rounded_button_purple"
        android:layout_marginBottom="26dp"/>

    <Button
        android:id="@+id/button_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách đơn hàng"
        android:textColor="#2A15AB"
        android:background="@drawable/button_account_background"
        android:layout_marginBottom="26dp"/>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textColor="#2A15AB"
        android:background="@drawable/rounded_button_purple"/>
</LinearLayout>
