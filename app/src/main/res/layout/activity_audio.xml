<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp">

    <!-- Ảnh bìa sách -->

    <!-- Tiêu đề sách -->

    <!-- Thanh Progress -->

    <!-- Hiển thị thời gian đã phát và tổng thời gian -->

    <!-- Nút điều khiển -->

    <TextView
        android:id="@+id/tv_total_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:fontFamily="@font/arima_bold"
        android:gravity="end"
        android:text="Nghe thử"
        android:textColor="#E81970"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="360dp"
        android:layout_height="218dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bo_di_ma_song3" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="257dp"
        android:layout_height="42dp"
        android:layout_below="@id/book_cover"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="@font/arima_bold"
        android:text="Bơ Đi Mà Sống"
        android:textColor="#78103C"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/book_title_author"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_cover"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="91dp"
        android:fontFamily="@font/arima_bold"
        android:text="Mèo Xù"
        android:textColor="#000000"
        android:textSize="25sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_title"
        android:layout_marginTop="65dp"
        android:progress="20" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arima_semibold"
            android:text="00:20"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:fontFamily="@font/arima_semibold"
            android:text="05:00"
            android:textSize="25sp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="170dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Nút Tua lui -->
        <ImageButton
            android:id="@+id/btn_rewind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Rewind"
            android:src="@drawable/ic_rewind" />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Play/Pause"
            android:src="@drawable/ic_pause" />

        <!-- Nút Tua tới -->
        <ImageButton
            android:id="@+id/btn_forward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Forward"
            android:src="@drawable/ic_forward" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBuyNow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#E81970"
        android:fontFamily="@font/arima_bold"
        android:padding="12dp"
        android:background="@drawable/btn_account"
        android:text="Mua sách"
        android:textColor="#FFF"
        android:textSize="20sp" />

</RelativeLayout>
