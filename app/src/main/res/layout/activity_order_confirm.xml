<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border_shape"
        >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/arima_semibold"
            android:text="ĐẶT HÀNG"
            android:textColor="#E81970"
            android:layout_marginTop="5dp"
            android:textSize="36dp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_bag_pink">
        </ImageView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#EAF7FF"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        >

        <TextView
            android:id="@+id/date_order"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="155dp"
            android:fontFamily="@font/arima_semibold"
            android:text="Ngày giao dự kiến"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date_detail"
            android:layout_width="118dp"
            android:layout_height="27dp"
            android:layout_above="@+id/express"
            android:layout_below="@+id/date_order"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="231dp"
            android:layout_marginBottom="29dp"
            android:fontFamily="@font/arima_semibold"
            android:text="20/10/2024"
            android:textColor="#2A1993"
            android:textSize="16sp" />

        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/express"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="113dp"
            android:layout_marginBottom="-4dp"
            android:fontFamily="@font/arima_semibold"
            android:text="Đơn vị vận chuyển"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="-5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/arima_semibold"
            android:text="SPX Expresss"
            android:textColor="#2A1993"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ic_car"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_above="@+id/danggiao_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="262dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_car" />

        <TextView
            android:id="@+id/danggiao_text"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/arima_semibold"
            android:paddingBottom="5dp"
            android:text="Đang giao"
            android:textColor="#78103C"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_blue"
        android:padding="16dp">

        <!-- Customer Information -->

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/invoice_title"
            android:layout_marginTop="160dp"
            android:background="#D9D9D9"
            android:paddingBottom="10dp" />

        <ImageView
            android:id="@+id/customer_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ava_account" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/customer_image"
            android:fontFamily="@font/arima_semibold"
            android:text="Lưu Ngọc Yến Như"
            android:textColor="#E81970"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name"
            android:layout_toEndOf="@id/customer_image"
            android:fontFamily="@font/arima_semibold"
            android:text="0123456789"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/customer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_phone"
            android:layout_toEndOf="@id/customer_image"
            android:fontFamily="@font/arima_semibold"
            android:text="32 Cao Thắng,  Đà Nẵng"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Invoice Details -->

        <TextView
            android:id="@+id/invoice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_address"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="105dp"
            android:fontFamily="@font/arima_semibold"
            android:text="Invoice details"
            android:textColor="#2A15AB"
            android:textSize="22sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/invoice_title"
            android:layout_marginTop="5dp"
            android:background="#D9D9D9"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/invoice_title"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/arima_semibold"
            android:text="Sản phẩm"
            android:textColor="#78103C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/price_label"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invoice_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="160dp"
            android:fontFamily="@font/arima_semibold"
            android:text="Giá"
            android:textColor="#78103C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view"
            android:layout_marginStart="100dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="-135dp"
            android:layout_toStartOf="@id/price_label"
            android:fontFamily="@font/arima_semibold"
            android:text="Số lượng"
            android:textColor="#78103C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quantity_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="17dp"
            android:fontFamily="@font/arima_semibold"
            android:text="Tổng"
            android:textColor="#78103C"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="190dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="35dp"
            android:gravity="bottom"
            android:orientation="vertical"
            >



            <!-- Row 2: Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arima_semibold"
                    android:text="Ngày"
                    android:textColor="#78103C"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/arima_semibold"
                    android:paddingLeft="68dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>

            <!-- Row 3: Quantity -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arima_semibold"
                    android:text="Số lượng"
                    android:textColor="#78103C"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/arima_semibold"
                    android:paddingLeft="45dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>

            <!-- Row 4: Prices -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arima_semibold"
                    android:text="Tổng tiền"
                    android:textColor="#78103C"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/arima_semibold"
                    android:paddingLeft="40dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>
            <!-- Row 4: Prices -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arima_semibold"
                    android:text="Thành tiền"
                    android:textColor="#78103C"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:fontFamily="@font/arima_semibold"
                    android:paddingLeft="40dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>