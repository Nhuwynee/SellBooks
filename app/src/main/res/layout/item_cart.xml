<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/book_img"
            android:layout_width="100dp"
            android:layout_height="126dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hong_luc"></ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/cart_detail"
                android:layout_width="wrap_content"
                android:minWidth="210dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/book_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/arima_bold"
                        android:maxLines="2"
                        android:minHeight="35dp"
                        android:text="Mắt biếc"
                        android:textColor="#E81970"
                        android:textSize="25sp"></TextView>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>


                <TextView
                    android:id="@+id/book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Nguyễn Nhật Ánh"
                    android:ellipsize="end"
                    android:fontFamily="@font/arima_semibold"
                    android:maxLines="2"
                    android:minHeight="35dp"
                    android:textColor="#78103C"
                    android:textSize="19sp">></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:id="@+id/btngiamsoluong"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:text="-"
                        android:fontFamily="@font/arima_bold"
                        android:paddingBottom="9dp"
                        android:textColor="#78103C"
                        android:background="@drawable/btn_tanggiam"
                        android:textSize="18sp"></Button>

                    <TextView
                        android:id="@+id/book_sl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingLeft="20dp"
                        android:text="1"
                        android:textColor="#78103C"
                        android:textSize="25sp"
                        android:fontFamily="@font/arima_bold"
                        android:textStyle="bold"></TextView>

                    <Button
                        android:id="@+id/btntangsoluong"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="30dp"
                        android:gravity="center"
                        android:text="+"
                        android:paddingBottom="5dp"
                        android:textColor="#78103C"
                        android:background="@drawable/btn_tanggiam"
                        android:textSize="18sp"></Button>
                <TextView
                    android:id="@+id/book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="225.000đ"
                    android:textColor="#2A15AB"
                    android:layout_marginStart="45dp"
                    android:fontFamily="@font/arima_bold"
                    android:textSize="20sp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
<!--                <ImageButton-->
<!--                    android:id="@+id/btnRemove"-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:layout_marginRight="6dp"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:src="@drawable/ic_bag"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:textColor="@color/white"></ImageButton>-->
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>